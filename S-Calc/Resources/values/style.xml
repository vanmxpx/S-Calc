<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <!--Action Bar-->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"><!--Light-->
    <item name="colorPrimary">#283339</item><!--#F5F5F5-->
    <item name="drawerArrowStyle">@style/MainArrowStyle</item>
  </style>
  <style name="MainArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
    <item name="color">@android:color/white</item><!--#1C1C1C-->
    <item name="spinBars">true</item>
  </style>

  <style name="grey_keyboard">
    <item name="android:keyTextSize">22dp</item>
    <item name="android:keyBackground">@drawable/keybackground</item>
    <item name="android:keyTextColor">@color/keyboardLongButton</item>
  </style>
</resources>